<!DOCTYPE html>
<html>
<head>
    <title>My Interview Notes</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
        }
        .note {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
        }
        .note h3 {
            margin-top: 0;
        }
        .button-group {
            margin-top: 10px;
            display: flex;
            gap: 10px;
            align-items: center;
        }
        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            text-decoration: none;
            display: inline-block;
            box-sizing: border-box;
        }
        .btn-edit {
            background-color: #4CAF50;
            color: white;
        }
        .btn-delete {
            background-color: #f44336;
            color: white;
        }
        .btn:hover {
            opacity: 0.8;
        }
        nav {
            margin-bottom: 20px;
        }
        nav a {
            margin-right: 15px;
            color: #007bff;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <nav>
        <a href="/notes/create">Create New Note</a>
        <% if (role === 'admin') { %>
            <a href="/admin/users">View All Users</a>
            <a href="/admin/notes">View All Notes</a>
        <% } %>
        <form action="/auth/logout" method="POST" style="display: inline;">
            <button type="submit" style="background: none; border: none; color: #007bff; cursor: pointer; text-decoration: underline;">Logout</button>
        </form>
    </nav>

    <h1>My Interview Notes</h1>

    <% if (notes.length === 0) { %>
        <p>No notes yet. <a href="/notes/create">Create your first note!</a></p>
    <% } else { %>
        <% notes.forEach(note => { %>
            <div class="note">
                <h3><%= note.candidate_name %> - <%= note.position %></h3>
                <p><strong>Interview Date:</strong> <%= note.interview_date %></p>
                <p><strong>Notes:</strong> <%= note.notes %></p>
                <p><small>Created: <%= note.created_at %></small></p>
                <div class="button-group">
                    <a href="/notes/edit/<%= note.id %>" class="btn btn-edit">Edit</a>
                    <form action="/notes/delete/<%= note.id %>" method="POST" style="margin: 0;">
                        <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this note?')">Delete</button>
                    </form>
                </div>
            </div>
        <% }); %>
    <% } %>
</body>
</html>